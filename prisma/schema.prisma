datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String      @id @default(cuid())
  email          String      @unique
  hashedPassword String
  name           String?
  createdAt      DateTime    @default(now())
  watchlists     Watchlist[]
  alerts         Alert[]
}

model Watchlist {
  id       String @id @default(cuid())
  userId   String
  marketId String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, marketId])
}

model Alert {
  id        String   @id @default(cuid())
  userId    String
  marketId  String
  condition String   // "above" | "below" | "change"
  threshold Float
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AiPrediction {
  id                String    @id @default(cuid())
  marketId          String
  marketTitle       String
  source            String    // "polymarket" | "kalshi" | "manifold" | "predictit"
  aiProbability     Float     // 0-100
  marketProbability Float     // 0-100 at prediction time
  divergence        Float
  confidence        String    // "low" | "medium" | "high"
  reasoning         String
  createdAt         DateTime  @default(now())
  resolvedAt        DateTime?
  resolution        String?   // "yes" | "no"
  brierScore        Float?    // (predicted/100 - outcome)^2

  @@index([marketId])
  @@index([createdAt])
  @@index([resolution])
}
