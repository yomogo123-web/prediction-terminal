datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String               @id @default(cuid())
  email            String               @unique
  hashedPassword   String
  name             String?
  polymarketWallet String?
  createdAt        DateTime             @default(now())
  watchlists       Watchlist[]
  alerts           Alert[]
  credentials      PlatformCredential[]
  orders           Order[]
  positions        Position[]
}

model Watchlist {
  id       String @id @default(cuid())
  userId   String
  marketId String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, marketId])
}

model Alert {
  id        String   @id @default(cuid())
  userId    String
  marketId  String
  condition String   // "above" | "below" | "change"
  threshold Float
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AiPrediction {
  id                String    @id @default(cuid())
  marketId          String
  marketTitle       String
  source            String    // "polymarket" | "kalshi" | "manifold" | "predictit"
  aiProbability     Float     // 0-100
  marketProbability Float     // 0-100 at prediction time
  divergence        Float
  confidence        String    // "low" | "medium" | "high"
  reasoning         String
  createdAt         DateTime  @default(now())
  resolvedAt        DateTime?
  resolution        String?   // "yes" | "no"
  brierScore        Float?    // (predicted/100 - outcome)^2

  @@index([marketId])
  @@index([createdAt])
  @@index([resolution])
}

model SmartMoneyWallet {
  id          String   @id @default(cuid())
  proxyWallet String   @unique
  userName    String
  rank        Int
  pnl         Float
  volume      Float
  xUsername   String?
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())

  @@index([rank])
}

model SmartMoneySnapshot {
  id            String   @id @default(cuid())
  proxyWallet   String
  conditionId   String
  marketTitle   String
  outcomeIndex  Int      // 0 = YES, 1 = NO
  size          Float
  averagePrice  Float
  currentValue  Float
  cashPnl       Float
  percentPnl    Float
  snapshotAt    DateTime @default(now())

  @@index([conditionId])
  @@index([proxyWallet])
  @@index([snapshotAt])
}

model PlatformCredential {
  id               String   @id @default(cuid())
  userId           String
  platform         String   // "polymarket" | "kalshi" | "manifold"
  encryptedPayload String   // AES-256-GCM encrypted JSON
  iv               String
  tag              String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, platform])
}

model Order {
  id              String   @id @default(cuid())
  userId          String
  marketId        String
  platform        String
  platformOrderId String?
  side            String   // "yes" | "no"
  type            String   // "market" | "limit"
  amount          Float
  shares          Float?
  price           Float?
  fillPrice       Float?
  status          String   @default("pending")
  errorMessage    String?
  builderCode     String?
  routedViaDome   Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([status])
}

model Position {
  id           String   @id @default(cuid())
  userId       String
  marketId     String
  platform     String
  side         String
  shares       Float
  avgCostBasis Float
  currentPrice Float
  realizedPnl  Float    @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, marketId, side])
}
